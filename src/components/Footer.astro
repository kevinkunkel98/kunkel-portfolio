---
const currentYear = new Date().getFullYear();
---

<footer class="bg-black border-t border-gray-800 font-mono">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Terminal window -->
    <div class="bg-gray-900 border border-gray-700 rounded-lg overflow-hidden">
      <!-- Terminal header -->
      <div class="bg-gray-800 px-4 py-2 flex items-center">
        <div class="flex space-x-2">
          <div class="w-3 h-3 bg-red-500 rounded-full"></div>
          <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        </div>
        <div class="text-gray-400 text-sm ml-4">kevin@localhost:~</div>
      </div>
      
      <!-- Terminal content -->
      <div class="p-6 text-sm text-gray-300 space-y-3">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- System info -->
          <div class="space-y-2">
            <div class="text-green-400"># System Info</div>
            <div><span class="text-blue-400">></span> whoami: Kevin Kunkel</div>
            <div><span class="text-blue-400">></span> status: Available</div>
            <div><span class="text-blue-400">></span> location: Earth</div>
            <div><span class="text-blue-400">></span> coffee_level: High</div>
          </div>
          
          <!-- Navigation -->
          <div class="space-y-2">
            <div class="text-green-400"># Quick Access</div>
            <div><span class="text-blue-400">$</span> <a href="/projects" class="hover:text-white">ls ./projects</a></div>
            <div><span class="text-blue-400">$</span> <a href="/blog" class="hover:text-white">cat ./thoughts.md</a></div>
            <div><span class="text-blue-400">$</span> <a href="/contact" class="hover:text-white">ping kevin</a></div>
          </div>
          
          <!-- Social links -->
          <div class="space-y-2">
            <div class="text-green-400"># External Links</div>
            <div><span class="text-blue-400">$</span> <a href="https://github.com/kevinkunkel" class="hover:text-white" target="_blank">git remote -v</a></div>
            <div><span class="text-blue-400">$</span> <a href="https://linkedin.com/in/kevinkunkel" class="hover:text-white" target="_blank">curl linkedin.com/kevin</a></div>
            <div><span class="text-blue-400">$</span> <a href="mailto:kevin@kevinkunkel.dev" class="hover:text-white">mail kevin@kevinkunkel.dev</a></div>
          </div>
        </div>
        
        <!-- Bottom line -->
        <div class="border-t border-gray-700 pt-4 mt-6">
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-2 md:space-y-0">
            <div class="text-gray-500">
              <span class="text-blue-400">></span> Built with Astro.js, React & excessive caffeine
            </div>
            <div class="text-gray-500">
              © {currentYear} Kevin Kunkel <span class="text-green-400">●</span> MIT License
            </div>
          </div>
        </div>
        
        <!-- Cursor -->
        <div class="flex items-center">
          <span class="text-green-400">kevin@localhost</span>
          <span class="text-white">:</span>
          <span class="text-blue-400">~</span>
          <span class="text-white">$ </span>
          <span class="bg-gray-300 w-2 h-4 ml-1 animate-pulse"></span>
        </div>
      </div>
    </div>
  </div>
</footer>