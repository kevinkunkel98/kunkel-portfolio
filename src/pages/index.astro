---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard';

// Recent commits to /dev/life
const featuredProjects = [
  {
    title: "tensor-playground",
    description: "Experimenting with computer vision models. Started as a weekend hack, now it actually works (sometimes).",
    technologies: ["PyTorch", "OpenCV", "FastAPI", "Docker"],
    category: "ML" as const,
    githubUrl: "https://github.com/kunkel/tensor-playground",
    imageUrl: "/placeholder-ml.jpg"
  },
  {
    title: "dev-collab",
    description: "Real-time code collaboration tool. Because pair programming over Zoom is painful.",
    technologies: ["React", "WebSockets", "Node.js", "PostgreSQL"],
    category: "WebDev" as const,
    githubUrl: "https://github.com/kunkel/dev-collab",
    liveUrl: "https://collab.alexkunkel.dev",
    imageUrl: "/placeholder-webdev.jpg"
  },
  {
    title: "mood-parser",
    description: "NLP sentiment analysis for social media. Tells you if the internet is happy today (spoiler: it's not).",
    technologies: ["Transformers", "Python", "FastAPI", "Redis"],
    category: "ML" as const,
    githubUrl: "https://github.com/kunkel/mood-parser",
    imageUrl: "/placeholder-nlp.jpg"
  }
];
---

<BaseLayout title="Kevin Kunkel - dev && data_scientist">
  <!-- Animated Background -->
  <div class="fixed inset-0 -z-10 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900"></div>
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute top-3/4 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse delay-700"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Left side: Terminal info -->
        <div class="text-center lg:text-left">
          <div class="opacity-0 animate-fade-in-up" style="animation-delay: 0.2s;">
            <div class="font-mono text-left max-w-4xl mx-auto lg:mx-0 mb-8">
              <div class="text-gray-500 text-base mb-3">~/kevin-kunkel $</div>
              <h1 class="text-4xl md:text-6xl lg:text-7xl font-normal mb-6 text-green-400">
                ML Mozart
              </h1>
              <div class="text-xl md:text-2xl lg:text-3xl text-gray-300 space-y-3 leading-relaxed">
                <div><span class="text-blue-400">></span> Kevin Kunkel</div>
                <div><span class="text-blue-400">></span> ML Engineer who dreams in Python</div>
                <div><span class="text-blue-400">></span> Full-stack dev with a beer addiction</div>
                <div><span class="text-blue-400">></span> Building stuff that (hopefully) doesn't break</div>
                <div class="text-gray-500 text-lg mt-6">// Currently available for interesting projects</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right side: Kevin's Photo -->
        <div class="flex justify-center lg:justify-end">
          <div class="opacity-0 animate-fade-in-up" style="animation-delay: 0.6s;">
            <div class="relative">
              <!-- Photo container with terminal styling -->
              <div class="relative group">
                <div class="w-96 h-96 lg:w-[28rem] lg:h-[28rem] relative overflow-hidden rounded-lg border-2 border-gray-700/50 bg-gradient-to-br from-purple-900/20 to-blue-900/20 backdrop-blur-sm">
                  <!-- Terminal window chrome -->
                  <div class="absolute top-0 left-0 right-0 h-6 bg-gray-900/80 border-b border-gray-700 flex items-center px-3 z-10">
                    <div class="flex space-x-1">
                      <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                      <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                      <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    </div>
                    <div class="text-gray-400 text-xs ml-2">~/kevin.jpg</div>
                  </div>

                  <!-- The actual photo -->
                  <!-- The actual photo -->
                  <img
                    src="/kevin-hero.jpg"
                    alt="Kevin Kunkel with electric guitar and aviator sunglasses"
                    class="absolute inset-0 w-full h-full object-cover mt-6 hover:scale-105 transition-transform duration-500"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />

                  <!-- Fallback if image doesn't load -->
                  <div class="absolute inset-0 mt-6 bg-gradient-to-br from-purple-900/40 to-blue-900/40 hidden items-center justify-center">
                    <div class="text-center font-mono">
                      <div class="text-4xl mb-2">🎸</div>
                      <div class="text-green-400 text-sm">Kevin Kunkel</div>
                      <div class="text-gray-400 text-xs">Rockstar Developer</div>
                      <div class="text-yellow-400 text-xs mt-2">Photo loading...</div>
                    </div>
                  </div>                  <!-- Hover overlay -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-4 left-4 right-4 text-white">
                      <div class="text-sm font-mono">
                        <div class="text-green-400">🎸 Rockstar Developer</div>
                        <div class="text-xs text-gray-300 mt-1">Ready to jam & code</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Terminal-style caption -->
              <div class="mt-4 font-mono text-center">
                <div class="text-gray-400 text-xs">
                  <span class="text-blue-400">$</span> display ./kevin_kunkel.jpg
                </div>
                <div class="text-green-400 text-xs mt-1">
                  File loaded: rockstar_developer.exe 🎸
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="opacity-0 animate-fade-in-up absolute bottom-8 left-1/2 transform -translate-x-1/2" style="animation-delay: 1.2s;">
      <div class="animate-bounce">
        <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Terminal CV Section -->
  <section class="py-20 bg-gradient-to-b from-black to-slate-900 relative">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-black/60 backdrop-blur-sm border border-gray-700/50 rounded-lg p-8 font-mono">

        <!-- Terminal Header -->
        <div class="flex items-center mb-6">
          <div class="flex space-x-2">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
          </div>
          <div class="text-gray-400 text-sm ml-4">kevin@terminal: ~/cv</div>
        </div>

        <!-- CV Header -->
        <div class="text-green-400 text-lg mb-6">
          <span class="text-blue-400">$</span> cat ./resume.json | jq '.'
        </div>

        <!-- CV Content in JSON-like format -->
        <div class="text-gray-300 text-sm space-y-6">
          <div>
            <span class="text-blue-400">"name":</span> <span class="text-green-400">"Kevin Kunkel"</span>,
          </div>

          <div>
            <span class="text-blue-400">"role":</span> <span class="text-green-400">"ML Engineer & Full-Stack Developer"</span>,
          </div>

          <div>
            <span class="text-blue-400">"experience":</span> [
            <div class="ml-4 space-y-3">
              <div>
                {
                <div class="ml-4">
                  <span class="text-blue-400">"position":</span> <span class="text-green-400">"Senior ML Engineer"</span>,<br/>
                  <span class="text-blue-400">"company":</span> <span class="text-green-400">"TechCorp"</span>,<br/>
                  <span class="text-blue-400">"period":</span> <span class="text-green-400">"2022-present"</span>,<br/>
                  <span class="text-blue-400">"stack":</span> [<span class="text-yellow-400">"Python", "PyTorch", "Kubernetes", "AWS"</span>]
                </div>
                },
              </div>

              <div>
                {
                <div class="ml-4">
                  <span class="text-blue-400">"position":</span> <span class="text-green-400">"Full-Stack Developer"</span>,<br/>
                  <span class="text-blue-400">"company":</span> <span class="text-green-400">"StartupLab"</span>,<br/>
                  <span class="text-blue-400">"period":</span> <span class="text-green-400">"2020-2022"</span>,<br/>
                  <span class="text-blue-400">"stack":</span> [<span class="text-yellow-400">"React", "Node.js", "PostgreSQL", "Docker"</span>]
                </div>
                }
              </div>
            </div>
            ],
          </div>

          <div>
            <span class="text-blue-400">"skills":</span> {
            <div class="ml-4">
              <span class="text-blue-400">"languages":</span> [<span class="text-yellow-400">"Python", "JavaScript", "TypeScript", "Go"</span>],<br/>
              <span class="text-blue-400">"ml_frameworks":</span> [<span class="text-yellow-400">"PyTorch", "TensorFlow", "Scikit-learn", "Transformers"</span>],<br/>
              <span class="text-blue-400">"web_tech":</span> [<span class="text-yellow-400">"React", "Next.js", "Node.js", "Express"</span>],<br/>
              <span class="text-blue-400">"databases":</span> [<span class="text-yellow-400">"PostgreSQL", "MongoDB", "Redis", "InfluxDB"</span>],<br/>
              <span class="text-blue-400">"devops":</span> [<span class="text-yellow-400">"Docker", "Kubernetes", "AWS", "GitHub Actions"</span>]
            </div>
            },
          </div>

          <div>
            <span class="text-blue-400">"education":</span> {
            <div class="ml-4">
              <span class="text-blue-400">"degree":</span> <span class="text-green-400">"B.S. Computer Science"</span>,<br/>
              <span class="text-blue-400">"university":</span> <span class="text-green-400">"Tech University"</span>,<br/>
              <span class="text-blue-400">"year":</span> <span class="text-green-400">"2020"</span>
            </div>
            },
          </div>

          <div>
            <span class="text-blue-400">"current_status":</span> <span class="text-green-400">"Available for new opportunities"</span>,<br/>
            <span class="text-blue-400">"beer_preference":</span> <span class="text-green-400">"IPA"</span>,<br/>
            <span class="text-blue-400">"debugging_method":</span> <span class="text-green-400">"console.log() until it works"</span>
          </div>
        </div>

        <!-- Terminal Commands -->
        <div class="mt-8 pt-4 border-t border-gray-700/50">
          <div class="text-gray-400 text-xs mb-2">Quick commands:</div>
          <div class="flex flex-wrap gap-4 text-sm">
            <a href="/projects" class="text-green-400 hover:text-green-300">
              <span class="text-blue-400">$</span> ./view-projects
            </a>
            <a href="/contact" class="text-green-400 hover:text-green-300">
              <span class="text-blue-400">$</span> ./hire-kevin
            </a>
            <a href="/blog" class="text-green-400 hover:text-green-300">
              <span class="text-blue-400">$</span> ./read-thoughts
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Constellation -->
  <section class="py-20 bg-gradient-to-b from-slate-900 to-black relative overflow-hidden">
    <!-- Animated grid background -->
    <div class="absolute inset-0 bg-grid-white/[0.02] bg-grid-16"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <div class="font-mono text-2xl md:text-4xl text-green-400 mb-4">
          cat /dev/skills
        </div>
        <div class="text-gray-500 font-mono text-sm">
          # Tools I actually use (and don't just put on my resume)
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
        <!-- ML Stack -->
        <div class="group relative">
          <div class="relative bg-gray-900/50 border border-gray-700 rounded-lg p-6 font-mono">
            <div class="flex items-center mb-4">
              <span class="text-purple-400 mr-2">🧠</span>
              <h3 class="text-lg font-normal text-white">ml_stack.py</h3>
            </div>

            <div class="text-sm text-gray-300 space-y-2">
              <div class="text-green-400"># Daily drivers</div>
              <div><span class="text-blue-400">import</span> torch, tensorflow <span class="text-gray-500"># The usual suspects</span></div>
              <div><span class="text-blue-400">from</span> transformers <span class="text-blue-400">import</span> * <span class="text-gray-500"># HuggingFace magic</span></div>
              <div><span class="text-blue-400">import</span> numpy, pandas <span class="text-gray-500"># Data wrangling</span></div>
              <div class="text-green-400 pt-2"># When things get visual</div>
              <div><span class="text-blue-400">import</span> cv2, matplotlib</div>
              <div class="text-green-400 pt-2"># Deployment & MLOps</div>
              <div><span class="text-blue-400">import</span> mlflow, docker</div>
            </div>
          </div>
        </div>

        <!-- Web Stack -->
        <div class="group relative">
          <div class="relative bg-gray-900/50 border border-gray-700 rounded-lg p-6 font-mono">
            <div class="flex items-center mb-4">
              <span class="text-blue-400 mr-2">⚡</span>
              <h3 class="text-lg font-normal text-white">package.json</h3>
            </div>

            <div class="text-sm text-gray-300 space-y-1">
              <div class="text-yellow-400">{"{"}</div>
              <div class="ml-4"><span class="text-green-400">"dependencies"</span>: {"{"}</div>
              <div class="ml-8"><span class="text-green-400">"react"</span>: <span class="text-orange-400">"^18.x"</span>, <span class="text-gray-500">// Still the GOAT</span></div>
              <div class="ml-8"><span class="text-green-400">"typescript"</span>: <span class="text-orange-400">"latest"</span>, <span class="text-gray-500">// Life saver</span></div>
              <div class="ml-8"><span class="text-green-400">"next.js"</span>: <span class="text-orange-400">"^14.x"</span>, <span class="text-gray-500">// Full-stack magic</span></div>
              <div class="ml-8"><span class="text-green-400">"node.js"</span>: <span class="text-orange-400">"LTS"</span>, <span class="text-gray-500">// Backend buddy</span></div>
              <div class="ml-8"><span class="text-green-400">"postgresql"</span>: <span class="text-orange-400">"^15"</span>, <span class="text-gray-500">// Reliable data</span></div>
              <div class="ml-8"><span class="text-green-400">"docker"</span>: <span class="text-orange-400">"latest"</span> <span class="text-gray-500">// It works on my machine™</span></div>
              <div class="ml-4">{"}"}</div>
              <div class="text-yellow-400">{"}"}</div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </section>  <!-- Project Showcase -->
  <section class="py-20 bg-gradient-to-b from-black to-slate-900 relative overflow-hidden">
    <!-- Animated particles -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-10 w-2 h-2 bg-purple-500 rounded-full animate-ping"></div>
      <div class="absolute top-40 right-20 w-1 h-1 bg-blue-500 rounded-full animate-pulse delay-700"></div>
      <div class="absolute bottom-32 left-1/4 w-1.5 h-1.5 bg-pink-500 rounded-full animate-ping delay-1000"></div>
      <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-cyan-500 rounded-full animate-pulse delay-500"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16 font-mono">
        <div class="text-2xl md:text-4xl text-green-400 mb-4">
          git log --oneline --graph
        </div>
        <div class="text-gray-500 text-sm">
          # Recent commits to my digital existence
        </div>
      </div>

      <!-- Project Grid with staggered animation -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        {featuredProjects.map((project, index) => (
          <div
            class="opacity-0 animate-fade-in-up"
            style={`animation-delay: ${(index + 1) * 0.2}s; animation-fill-mode: forwards;`}
          >
            <ProjectCard project={project} client:load />
          </div>
        ))}
      </div>

      <!-- Git-style CTA -->
      <div class="text-center font-mono">
        <div class="bg-gray-900/50 border border-gray-700 rounded-lg p-4 inline-block">
          <div class="text-green-400 text-sm">
            <span class="text-blue-400">$</span>
            <a href="/projects" class="hover:underline">cd ./projects && ls -la</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA - Cosmic Connection -->
  <section class="py-24 bg-gradient-to-b from-slate-900 via-purple-900 to-black relative overflow-hidden">
    <!-- Animated cosmic background -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-pink-500/5 rounded-full blur-3xl animate-pulse delay-500"></div>
    </div>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="mb-8 font-mono">
        <div class="text-2xl md:text-4xl text-green-400 mb-6">
          sudo ./collaborate.sh
        </div>

        <div class="text-gray-300 space-y-2 text-lg">
          <div><span class="text-gray-500">#</span> Got an interesting problem?</div>
          <div><span class="text-gray-500">#</span> Need someone who speaks both Python and human?</div>
          <div><span class="text-gray-500">#</span> Let's build something cool together.</div>
        </div>
      </div>

      <div class="flex justify-center font-mono">
        <div class="bg-gray-900/50 border border-gray-700 rounded-lg p-4">
          <div class="text-green-400 text-sm space-y-2">
            <div class="flex items-center space-x-2">
              <span class="text-blue-400">$</span>
              <a href="/contact" class="hover:underline">echo "Let's chat" > /dev/coffee</a>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-blue-400">$</span>
              <a href="mailto:alex@domain.com" class="hover:underline">mail -s "Project idea" alex@domain.com</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="mt-16 font-mono text-center">
        <div class="text-gray-500 text-sm">
          <span class="text-green-400">●</span> Available for interesting projects
          <span class="text-yellow-400 ml-4">⚡</span> Usually responds within 24h
          <span class="text-blue-400 ml-4">☕</span> Powered by coffee & curiosity
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
