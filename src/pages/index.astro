        <script>
          // Toggle CV content visibility
          const toggleButton = document.getElementById('cv-toggle-command');
          const cvContent = document.getElementById('cv-content');

          toggleButton?.addEventListener('click', () => {
            if (!cvContent) return;

            if (cvContent.classList.contains('hidden')) {
              // Show CV with animation
              cvContent.classList.remove('hidden');
              setTimeout(() => {
                if (cvContent) {
                  cvContent.style.opacity = '1';
                  cvContent.style.maxHeight = '5000px';
                }
              }, 10);

              // Add execution feedback
              const feedback = document.createElement('div');
              feedback.className = 'text-green-400 text-xs mt-2 animate-fade-in-up';
              feedback.textContent = '‚úì Executing command...';
              toggleButton?.appendChild(feedback);

              setTimeout(() => {
                feedback.remove();
              }, 1500);
            } else {
              // Hide CV
              cvContent.style.opacity = '0';
              cvContent.style.maxHeight = '0';
              setTimeout(() => {
                if (cvContent) {
